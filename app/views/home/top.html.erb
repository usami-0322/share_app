<% if user_signed_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="stats">
        <%= render 'shared/stats' %>
      </section>
      <section class="post_form">
        <%= render 'shared/post_form' %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3>フィード</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <h1>GOOW</h1>
    <h2>数値管理<br>
    情報共有アプリケーション</h2>
    <%= link_to "新規登録", new_user_registration_path, class: "btn btn-lg btn-info" %>
    <%= link_to 'ゲストログイン', users_guest_sign_in_path, method: :post , class: "btn btn-lg btn-danger" %>
  </div>
<% end %>
