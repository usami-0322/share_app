<%= form_for(@managemant) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <h4><i class="fa fa-line-chart" aria-hidden="true"></i> 売上入力</h4>
  <div class="field">
    <%= f.label :budget, "予算　(変更がなければそのまま)" %><br />
    <%= f.text_field :budget, value: @latest_budget %>
    <%= f.label :result, "売上実績" %><br />
    <%= f.date_field :result_date, { include_blank: true, selected: Date.today } %>
    <%= f.text_field :result, placeholder: "売上入力" %>
    <%= f.hidden_field :user_id, value: current_user.id %>
  </div>
  <%= f.submit "登録", class: "btn btn-primary" %>
<% end %>